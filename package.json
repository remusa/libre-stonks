		"postcss": "^8.4.38",
		"postcss-load-config": "^5.1.0",
		"rimraf": "^5.0.6",
		"svelte": "5.0.0-next.127",
		"svelte-check": "^3.7.1",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
