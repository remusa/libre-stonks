{
	"name": "libre-stonks",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "tauri dev",
		"dev": "vite",
		"dev:android": "tauri android dev",
		"init:android": "tauri android init",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"tauri": "tauri",
		"deps": "nlx taze -Iwi",
		"deps:safe": "nr deps && git commit -a -m \"chore(deps): update all non-major dependencies\"",
		"sort": "nlx sort-package-json",
		"fix": "nlx @biomejs/biome check --apply-unsafe ./src",
		"format": "nlx @biomejs/biome format ./src --write",
		"lint": "nlx @biomejs/biome lint ./src ",
		"postinstall": "lefthook install",
		"clean:frontend": "nlx rimraf node_modules/ dist/ build/",
		"clean:cargo": "cd ./src-tauri/ && cargo clean",
		"commitlint": "npx commitlint --edit '$1'"
	},
	"dependencies": {
		"@tauri-apps/api": "^2.0.0-alpha.14",
		"@tauri-apps/plugin-fs": "2.0.0-alpha.6",
