		"@tauri-apps/plugin-shell": "^2.0.0-alpha.5",
		"@tauri-apps/plugin-sql": "2.0.0-alpha.5",
		"@tauri-apps/plugin-store": "2.0.0-alpha.5",
		"@tauri-apps/plugin-stronghold": "2.0.0-alpha.6",
		"@tauri-apps/plugin-websocket": "2.0.0-alpha.5",
		"@tauri-apps/plugin-window-state": "2.0.0-alpha.5",
		"bits-ui": "^0.21.7",
		"clsx": "^2.1.1",
		"cmdk-sv": "^0.0.17",
		"dayjs": "^1.11.11",
		"just-debounce-it": "^3.2.0",
		"just-throttle": "^4.2.0",
		"lucide-svelte": "^0.378.0",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.12",
