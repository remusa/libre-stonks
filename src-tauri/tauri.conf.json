{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "libre-stonks",
		"version": "0.0.0"
	},
	"tauri": {
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.renems.libre-stonks",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": false,
				"alwaysOnTop": true,
				"decorations": true,
				"transparent": false,
				"title": "Stonks",
				"width": 400,
				"height": 700
			}
		],
		"macOSPrivateApi": true
	},
	"plugins": {
		"http": {
			"scope": ["*"]
		},
		"shell": {
			"open": true
		}
	}
}
